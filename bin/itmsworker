#!/bin/bash

set -e

root=$(dirname "$0")
platform=$(ruby -e'print RUBY_PLATFORM')
gemfile="$root/../Gemfile.$platform"

if [ ! -f "$gemfile" ]; then
    echo -e "Missing file $gemfile\nYou must run: ruby setup.rb" >&2
    exit 1
fi

BUNDLE_GEMFILE="$gemfile" "$root/padrino" rake -c "$root/.." -e production jobs:${1:-work}
