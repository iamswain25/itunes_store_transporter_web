#!/bin/bash

start()
{
    "$padrino" start -e production "$@" -c "$root"
}

stop()
{
    "$padrino" stop -e production "$@" -c "$root"
    echo			# Padrino message does not use line terminator
}

root=${0%bin*}
# Were we invoked from bin?
[ "$root" == "$0" ] && root=".."
[ -z $root ] && root=$(pwd)

padrino="${root}/bin/padrino"
if [ ! -x "$padrino" ]; then
    echo $padrino is missing, please run the install script first: ruby setup.rb
    exit 1
fi

command="$1"; shift
case $command in
    start)
	start "$@" ;;
    stop)
	stop "$@";;
    restart)
	stop "$@"
	start "$@" ;;
    *)
	echo "usage: itmsweb <start|stop|restart> [OPTIONS]"
esac
