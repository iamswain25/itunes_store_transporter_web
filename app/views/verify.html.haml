%h2 
  Verify

= form_for @options, :verify, :class => "form-horizontal" do |f|
  = f.file_browser_field :package, :data => { :title => "Package" }
  = f.check_box :verify_assets, :value => "true", :uncheck_value => "false", :label => "Verify assets", :help_block => ""
  
  = partial "shared/auth_fields", :object => f

  = f.actions do 
    = f.submit "Verify"

= partial "shared/file_browser"
    
:javascript
  $(document).ready(function() {
    $('#open_file_browser_for_package').fileBrowser({title: 'Select Your Package', type: 'directory'}, function(file) { 
      iTMS.fileSelected('package', file);
    });
  });
