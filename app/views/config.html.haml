- title "Configuration"

%h2 Configuration
  
= form_for @config, :config, :class => "form-horizontal" do |f|    

  = f.file_browser_field :path, :label => "Transporter", :data => { :title => "Transporter" }
  = f.text_field :username
  = f.text_field :password
  = f.text_field :shortname

  -# Padrino will always append ':'
  -# If not an int, 0 will show up in the text box  
  = f.rate_field :rate
  = f.select_transport :transport

  = f.actions do
    = f.submit "Save"  

= partial "shared/file_browser"
    
:javascript
  $(document).ready(function() {    
    $('#open_file_browser_for_path').fileBrowser({title: 'iTMSTransporter Location'}, function(file) { 
      iTMS.fileSelected('path', file);
    })
  });
