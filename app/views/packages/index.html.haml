%h2
  Package Statuses:
  = form_tag url(:packages), :method => "get", :class => "form-inline" do
    = hidden_field_tag :order, :value => params[:order]
    = select_tag :current_status, :options => status_options, :include_blank => "All", :selected => params[:current_status], :class => "input-medium js-package-filter"
  :javascript

.jobs
  .actions(style="text-align: right; padding-bottom: 4px;")
    %i.icon-film
    = link_to "New Package", url("packages/new")

  - if @packages.none?
    %p
      No packages found.

  - else
    %table.table
      %thead
        %tr
          %th
            = sort_by("current_status", "status")
          %th
            = sort_by("title")
          %th
            = sort_by("vendor_id")
          %th
            = sort_by("account")
          %th
            = sort_by("last_upload")
          %th{:colspan => 2}
            = sort_by("last_status_check")

      %tbody
        - @packages.each do |pkg|
          %tr[pkg]
            %td
              - if pkg.current_status.present?
                = link_to status_label(pkg.current_status), url(:packages, pkg.id)
              - else
                &mdash;
            %td
              = link_to pkg.title, url(:packages, :id => pkg)
            %td
              = link_to pkg.vendor_id, url(:packages, :id => pkg)
            %td
              = link_to pkg.account.shortname, url(:packages, :id => pkg)
            %td
              - if pkg.last_upload
                = l pkg.last_upload
              - else
                &mdash;
            %td
              - if pkg.last_status_check
                = l pkg.last_status_check
              - else
                &mdash;
            %td{:style => "text-align: right"}
              = link_to "Edit", url(:edit_package, :id => pkg), :class => "btn btn-mini"
              = link_to "Delete", url(:packages, :id => pkg, :format => "js"), :class => "btn btn-mini btn-danger", :confirm => "Delete package?", :remote => true, :method => "delete"
              = form_for :status_form, url(:status), :class => "form-inline" do |f|
                = f.hidden_field :vendor_id, :value => pkg.vendor_id
                = f.hidden_field :account_id, :value => pkg.account_id
                = f.submit "Check status", :class => "btn btn-mini"

    = will_paginate @packages
